<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.mealapp.view.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_tariffsFragment"
            app:destination="@id/tariffsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tariffsFragment"
        android:name="com.example.mealapp.view.TariffsFragment"
        android:label="fragment_tariffs"
        tools:layout="@layout/fragment_tariffs">
        <argument
            android:name="info"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_tariffsFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>